{% extends '::base.bootstrap.html.twig' %}
{% block cssmodulo %}
	<link href="{{ asset('templates/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
	<link href="{{ asset('templates/css/plugins/select2/select2.min.css') }}"" rel="stylesheet">
	<link href="{{ asset('templates/css/plugins/touchspin/jquery.bootstrap-touchspin.min.css') }}" rel="stylesheet">
	<link href="{{ asset('templates/css/plugins/datapicker/datepicker3.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}



{% set controller = getControllerName() %}
{% set action = getActionName() %}

             <div class="wrapper wrapper-content animated fadeInRight">
            	<div class="row">

	         <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Form -> {{controller|capitalize}}</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>


                            </div>
                        </div>



                        <div class="ibox-content">

                        	{% block datos %}

                          {% endblock %}



                        </div>
                    </div>
               </div>
              </div>
            </div>


{% if action=='edit' or action == 'show'  %}
	{{ form_start(delete_form) }}
    {{ form_end(delete_form) }}
{% endif%}
{% endblock %}

{% block javascriptmodulo %}

		<!-- Select2 -->
	  <script src="{{ asset('templates/js/plugins/select2/select2.full.min.js') }}"></script>

		<script>
				$(".select2").select2();
		</script>

		<!-- TouchSpin -->
    <script src="{{ asset('templates/js/plugins/touchspin/jquery.bootstrap-touchspin.min.js') }}"></script>
    <script>
				$(".touchspin").TouchSpin({
						min: 1,
						max: 40,
						buttondown_class: 'btn btn-white',
						buttonup_class: 'btn btn-white'
				});
		</script>

		<!-- Data picker -->
    <script src="{{ asset('templates/js/plugins/datapicker/bootstrap-datepicker.js') }}"></script>
		<script>
				$('#data_1 .input-group.date').datepicker({
						todayBtn: "linked",
						keyboardNavigation: false,
						forceParse: false,
						calendarWeeks: true,
						autoclose: true
				});
		</script>
    <!-- iCheck -->
    <script src="{{ asset('templates/js/plugins/iCheck/icheck.min.js') }}"></script>
        <script>
            $(document).ready(function () {
                $('.i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green',
                });
            });
        </script>
{% endblock %}
